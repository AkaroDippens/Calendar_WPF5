<UserControl x:Class="Calendar_WPF5.UserControlEmoji"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar_WPF5"
             mc:Ignorable="d" 
             d:DesignHeight="112" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="205*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="checkEmoji" Height="40" FontSize="25"  Content="" VerticalAlignment="Center" Margin="7,0,7,0" />
        <Image x:Name="EmotionIcon" HorizontalAlignment="Center" Source="icon/NerdEmotion_clipdrop-background-removal.png" Height="96"  VerticalAlignment="Top" Width="110" Grid.Column="1" Margin="0,20,0,0"/>

    </Grid>
</UserControl>
